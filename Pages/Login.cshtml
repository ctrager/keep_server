@page
@{
    Layout = "_layout_signed_out";
}

@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<h1>@ViewData["Title"]</h1>

<partial name="_FlashPartial" />

<div class="form_div">
<form method="post">
    <table class="form_table">
        <tr>
            <td><label>Username or Email</label>
            <td><input  maxlength="20" asp-for="username" />
        </tr>
        <tr>
            <td><label>Password</label>
            <td><input maxlength="50" type="password" asp-for="password" />
        </tr>
        <tr><td><button type="submit">Login</button>
        </tr>
    </table>
</form>
</div>

<div><a href="/ResetPasswordRequest">Forgot Password?</a></div>

<div class="login_register">
    <div>Is this your first time?</div>
    <div><a href="/Register">Register</a></div>
</div>

@section Scripts {
    
}

